 <head>
  <title>Tabbed Structure - REgular</title>
  <link rel="stylesheet" href="style.css" type="text/css" media="screen"/>
</head>
<body>
  <div id="tabbed_box_1" class="tabbed_box">
    <h4>Select a Tab</h4>
    <div id="navigation">
          <ul>
           <li id="current"><%= link_to 'All Requests', project_requests_path %></li>
           <li><%= link_to 'My Profile', employee_path(current_employee) %></li>
             <li><%= link_to "Requests I've Posted", _my_requests_path %></li>
              <li><%= link_to "Post a New Request", new_project_request_path %></li>
          </ul>
        </div>    
      </div>

<p class="profilehead"> Requests I've Posted</p>
<li><%= link_to 'New Request', new_project_request_path %></li>

<table>
  
<% if !@project_requests.nil? %>
<% @project_requests.each do |project_request| %>
  <tr>
    <td><%= project_request.title %>: 
    <%= project_request.start_date.strftime("%B %e, %Y -") %>
    <%= project_request.end_date.strftime(" %B %e, %Y") %></td>
   <td> <% if project_request.start_date <= @current_date  &&    project_request.end_date > @current_date %> 
           <%= project_request.status = 'Open, In Progress' %>
        <% else %> 
          <% if project_request.start_date > @current_date %> 
           <%= project_request.status  = 'Open, Not Started' %>
          
          <% else %>
             <% if project_request.end_date <= @current_date  %>
             <%= project_request.status  = 'Closed, Completed' %>
             <% end %>
          <% end %>
        <% end %>
    </td>
    
  </tr>
  <tr>
    <td>Description:
    <%= project_request.project_help %></td>
  </tr>
  <tr>
    <td>Applicants</td>
  </tr> 
  
 
    <tr> </tr>

<% if !@responses.nil? %>
    
  <% @responses.each do |response| %>
     
<% if project_request.id  == response.project_request_id && response.employee_id == project_request.employee_id %>
     <tr><td><%= link_to response.employee.employee_name, employee_path(response.employee_id) %></td>
     <td><%= link_to 'View Profile', employee_path(response.employee_id) %></td> 

  <% if !@request_selections.nil? %>
    
    <% @request_selections.each do |request_selection| %> 
     
      <% if response.employee_id == request_selection.employee_id && response.project_request_id == request_selection.project_request_id %>
      <td> Selected </td>
      <% else %>   
      <td><%= link_to 'Select', new_response_request_selection_path(response) %></td>  
      <% end %>
    <% end %>
  <%end %>
</tr> 
<% end %>

<% end %>
<% end %>
<% end %>
<% end %>
</table>

<br />

